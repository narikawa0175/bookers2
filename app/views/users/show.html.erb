<div class="container px-5 px-sm-0">
 <div class="row">
  <%= render 'books/userinfo' ,user:@user,post:@post %>
  
  <div class="col-md-8 offset-md-1">
   <h2>Books</h2>
   <table class="table table-hover table-inverse">
    <thead>
     <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
     </tr>
    </thead>
    <tbody>
     <% @posts.each do |post| %>
     <tr>
      <td>
       <%= link_to user_path(post.id) do %>
        <%= image_tag post.user.get_profile_image(80,80) %>
       <% end %>
      </td>
      <td>
       <%= link_to book_path(post.id) do %>
        <%= post.title %>
       <% end %>
      </td>
      <td>
       <%= post.body %>
      </td>
     </tr>
     <% end %>
    </tbody>
   </table>
  </div>
 </div>
</div>